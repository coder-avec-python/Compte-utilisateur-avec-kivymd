<Connexion>:
    name: "connexion"

    ScrollView:

        MDBoxLayout:
            spacing: "25dp"
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            cols: 1
            padding: 10, 15
            halign: "center"
            orientation: "vertical"


            MDSmartTile:
                radius: 100
                # box_radius: [0, 100, 75, 75]
                source: "user.png"
                size_hint: None, None
                size: "100dp", "100dp"
                pos_hint: {"center_x": .5}
                box_color: 0, 0, 0, 0

            MDLabel:
                text: "Connexion"
                font_style: "H6"
                bold: True
                color: 1, 1, 1, 1
                halign: "center"
                pos_hint: {"center_x": 0.5}


            MDTextField:
                hint_text: "Votre adress mail"
                mode: "rectangle"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: 0.9
                font_size:"12dp"
                icon_right: "email"
                icon_right_color: app.theme_cls.primary_color

            MDTextField:
                hint_text: "Mot de passe"
                mode: "rectangle"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: .9
                password: True
                icon_right: "lock"
                font_size:"12dp"
                icon_right_color: app.theme_cls.primary_color

            MDFillRoundFlatButton:
                text: "Se connecter"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: 0.9
                text_color: 1, 1, 1, 1
                elevation: 3
                font_size: 20
                font_size:"12dp"
                on_press: root.manager.current = 'profil'

            MDFillRoundFlatButton:
                text: "Avec Facebook"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: 0.9
                text_color: 1, 1, 1, 1
                elevation: 3
                font_size: 20
                font_size:"12dp"
                md_bg_color: 0.1, 0.3, 1, 1

            MDFillRoundFlatButton:
                text: "Inscription"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: 0.9
                text_color: 1, 1, 1, 1
                elevation: 3
                font_size: 20
                font_size:"12dp"
                md_bg_color: 0.8, 0, 0, 1
                on_press: root.manager.current = 'inscription'


